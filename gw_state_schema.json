{
    "$schema": "https://raw.githubusercontent.com/json-schema-org/json-schema-spec/draft-07/schema.json",
    "title": "Gateway state",
    "description": "Format of either desired or reported state in the gateway device shadow",
    "type": "object",
    "properties": {
        "robots": {
            "description": "List of robots",
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^([a-f0-9]{2}){6}$": {
                    "description": "State of robot with address equal to the key",
                    "type": "object",
                    "properties": {
                        "driveTimeMs": {
                            "description": "Drive time in milliseconds",
                            "type": "integer",
                            "minimum": 0
                        },
                        "angleDeg": {
                            "description": "Angle of next movement in degrees",
                            "type": "integer",
                            "minimum": -180,
                            "maximum": 180
                        },
                        "speedPCT": {
                            "description": "Speed of next movement in percent",
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 100
                        },
                        "led": {
                            "description": "State of LED",
                            "type": "array",
                            "prefixItems": [
                                {
                                    "description": "Red channel",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 255
                                },
                                {
                                    "description": "Green channel",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 255
                                },
                                {
                                    "description": "Blue channel",
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 255
                                },
                                {
                                    "description": "Blink duration in milliseconds",
                                    "type": "integer",
                                    "minimum": 0
                                }
                            ],
                            "items": false
                        }
                    }
                }
            }
        }
    },
    "required": [
        "robots"
    ]
}